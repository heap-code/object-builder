{
	"git": {
		"commit": true,
		"commitMessage": "chore(release): v${version}",
		"push": true,
		"tag": true,
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"hooks": {
		"after:bump": "npx ts-node tools/release-it/bump.after.ts"
	},
	"npm": {
		"publish": true
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"header": "# Changelog",
			"infile": "CHANGELOG.md",
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{
						"section": "Features",
						"type": "feat"
					},
					{
						"section": "Bug Fixes",
						"type": "fix"
					},
					{
						"section": "Documentation",
						"type": "docs"
					},
					{
						"section": "Performances",
						"type": "perf"
					}
				]
			}
		}
	}
}
